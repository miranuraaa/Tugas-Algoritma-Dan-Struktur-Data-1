#include <iostream>
using namespace std;

int main() {
  char nama[30];
  int nilai_a, nilai_b, nilai_c, rata2;
  cout << "Nama                 : ";
  cin >> nama;
  cout << "Nilai Pertandingan 1 : ";
  cin >> nilai_a;
  cout << "Nilai Pertandingan 2 : ";
  cin >> nilai_b;
  cout << "Nilai Pertandingan 3 : ";
  cin >> nilai_c;
  cout << endl;

  rata2 = (nilai_a + nilai_b + nilai_c) / 3;
  cout << "Siswa yang bernama " << nama << endl;
  cout << "Memperoleh nilai rata rata " << rata2
       << " dari hasil perlombaan yang diikutinya." << endl;
  if (rata2 >= 85) {
    cout << "Selamat! mendapat hadiah Komputer Core i5" << endl;
  } else if (rata2 >= 70) {
    cout << "Selamat! mendapat hadiah Uang sebesar Rp. 2.500,000" << endl;
  } else if (rata2 < 70) {
    cout << "Selamat! mendapat hadiah hiburan" << endl;
  }

  getchar();
}
